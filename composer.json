{
    "name": "hexlet/code",
    "description": "Php validation library",
    "authors": [
        {
            "name": "yulia633,",
            "email": "ignat633yulia@yandex.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hexlet\\Validator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hexlet\\Validator\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "phpstan/phpstan": "^0.12.65"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/extension-installer": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "license": "MIT"
}
